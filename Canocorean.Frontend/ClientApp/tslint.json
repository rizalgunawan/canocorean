{
  "extends": "tslint:latest",
  "rulesDirectory": ["./node_modules/codelyzer"],
  "rules": {
      "adjacent-overload-signatures": true,
      "arrow-parens": [true, "ban-single-arg-parens"],
      "member-access": [true, "check-accessor"],
      "member-ordering": [
          true,
          {
              "order": "instance-sandwich"
          }
      ],
      "no-empty-interface": true,
      "no-inferrable-types": [true, "ignore-params", "ignore-properties"],
      "no-internal-module": true,
      "no-namespace": false,
      "no-non-null-assertion": true,
      "no-parameter-reassignment": true,
      "no-reference": true,
      "no-unnecessary-type-assertion": true,
      "no-var-requires": true,
      "only-arrow-functions": [false],
      "object-literal-sort-keys": false,
      "typedef": [true, "call-signature", "parameter", "member-variable-declaration", "object-destructuring", "array-destructuring"],
      "typedef-whitespace": [
          true,
          {
              "call-signature": "nospace",
              "index-signature": "nospace",
              "parameter": "nospace",
              "property-declaration": "nospace",
              "variable-declaration": "nospace"
          }
      ],
      "unified-signatures": true,
      "ban": [true, "eval", "$", { "name": "window" }, { "name": ["*", "patchValue"] }],
      "ban-types": [true, ["FormGroup"], ["FormArray"], ["ControlContainer"], ["FormBuilder"]],
      "curly": true,
      "forin": true,
      "label-position": true,
      "no-arg": true,
      "no-conditional-assignment": true,
      "no-for-in-array": true,
      "no-for-in": true,
      "strict-string-expressions": true,
      "no-inferred-empty-object-type": true,
      "no-object-literal-type-assertion": false,
      "no-submodule-imports": [
          true,
          "shared",
          "rxjs",
          "core-js",
          "zone.js",
          "@angular",
          "date-fns/locale",
          "flatpickr/dist",
          "angularx-flatpickr",
          "angulartics2"
      ],
      "no-switch-case-fall-through": true,
      "no-unused-expression": [true, "allow-fast-null-checks"],
      "no-void-expression": true,

      "cyclomatic-complexity": [true, 11],
      "deprecation": true,
      "linebreak-style": [false],
      "max-file-line-count": [true, 300],
      "max-line-length": [true, 200],
      "no-default-export": true,
      "no-mergeable-namespace": true,
      "no-require-imports": true,
      "trailing-comma": [
          true,
          {
              "singleline": "never",
              "multiline": "never"
          }
      ],
      "binary-expression-operand-order": true,
      "encoding": true,
      "interface-name": [true, "never-prefix"],
      "match-default-export-name": true,
      "one-variable-per-declaration": [true],
      "no-angle-bracket-type-assertion": false,
      "no-implicit-dependencies": [true, ["routing.config", "shared", "core", "protractor", "blue-harvest"]],
      "no-irregular-whitespace": true,
      "no-unnecessary-callback-wrapper": true,
      "no-unnecessary-qualifier": true,
      "no-bitwise": false,

      "import-destructuring-spacing": true,
      "number-literal-format": true,
      "prefer-method-signature": true,
      "prefer-switch": true,
      "prefer-template": [true, "allow-single-concat"],
      "semicolon": false,
      "space-within-parens": true,
      "switch-final-break": true,
      "quotemark": [true, "single", "avoid-escape"],
      "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type"],
      "variable-name": [true, "check-format", "allow-leading-underscore", "ban-keywords"],

      "use-pipe-decorator": true,
      "component-class-suffix": true,
      "component-max-inline-declarations": true,
      "component-selector": [true, "element", "", "kebab-case"],
      "contextual-lifecycle": true,
      "directive-class-suffix": true,
      "directive-selector": [true, "attribute", "", "camelCase"],
      "no-attribute-decorator": true,
      "no-conflicting-lifecycle": true,
      "no-forward-ref": false,
      "no-host-metadata-property": true,
      "no-input-rename": true,
      "no-inputs-metadata-property": true,
      "no-lifecycle-call": true,
      "no-output-native": true,
      "no-output-on-prefix": true,
      "no-output-rename": true,
      "no-outputs-metadata-property": true,
      "no-pipe-impure": true,
      "no-queries-metadata-property": true,
      "no-unused-css": true,
      "prefer-inline-decorator": false,
      "prefer-output-readonly": true,
      "template-banana-in-box": true,
      "template-conditional-complexity": [true, 10],
      "template-cyclomatic-complexity": [true, 14],
      "template-i18n": false,
      "template-no-negated-async": true,
      "template-use-track-by-function": false,
      "use-component-selector": false,
      "use-component-view-encapsulation": true,
      "use-lifecycle-interface": true,
      "use-pipe-transform-interface": true,

      "template-no-call-expression": false,
      "prefer-on-push-component-change-detection": true,
      "pipe-prefix": [true, ""],
      "relative-url-prefix": true,
      "template-click-events-have-key-events": false,
      "template-mouse-events-have-key-events": false,
      "template-no-any": true,
      "template-no-autofocus": true,
      "template-no-distracting-elements": true
  }
}
